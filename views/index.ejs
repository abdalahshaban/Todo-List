<% include ../views/partials/header%>

      
     
<div class="container">
      <form method="post" action="/todo/add">
            <div class="form-group row">
                  <label for="text" class="col-sm-1-12 col-form-label">Todo Name</label>
                  <div class="col-sm-1-12">
                        <input type="text" class="form-control" name="text" id="text" placeholder="ENter name">
                  </div>
                  <div class="form-group">
                    <label for="body">Todo Body</label>
                    <textarea class="form-control" name="body" id="body"  rows="3"></textarea>
                  </div>
                  <button type="submit" class="btn btn-danger">Submit</button>
            </div>
      </form>
</div>

      <ul>
            <% todos.forEach((todo)=>{ %>
                        <li> <%=todo.text%>  - <%=todo.body%> -
                        <a data-id="<%=todo._id%>" href="" class="btn btn-danger delete-todo">Delete</a>
                        <a href="/todo/edit/<%=todo._id%>" class="btn btn-success">Edit</a>
                        </li>
                        
           <% })%>
            
      </ul>
<% include ../views/partials/footer%>